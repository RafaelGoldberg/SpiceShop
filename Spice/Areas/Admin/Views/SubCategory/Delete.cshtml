
@model Spice.Models.ViewModels.SubCategoryAndCategoryViewModel
@using Spice.Extensions
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Delete Sub Category</h2>
<br />

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="border backgroundWhite row">
    <div class="col-8">
        <form method="post" asp-action="Delete">
            <input type="hidden" asp-for="SubCategory.CategoryId" />
            <input type="hidden" asp-for="SubCategory.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="SubCategory.Category.Name" class="col-form-label"> </label>
                </div>
                <div class="col-5">
                    <input readonly asp-for="SubCategory.Category.Name" class="form-control" />
                    @*<select disabled asp-for="SubCategory.CategoryId" id="ddlCategorylist" class="form-control" asp-items="Model.CategoryList.ToSelectListItem(Model.SubCategory.CategoryId)"></select>*@
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="SubCategory.Name" class="col-form-label"> </label>
                </div>
                <div class="col-5">
                    <input readonly asp-for="SubCategory.Name" class="form-control" />
                </div>
                <span asp-validation-for="SubCategory.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-5 offset-3">
                    <partial name="_DeleteAndBackToListButton" model="Model.SubCategory.Id" />
                </div>

            </div>


        </form>
    </div>


</div>


