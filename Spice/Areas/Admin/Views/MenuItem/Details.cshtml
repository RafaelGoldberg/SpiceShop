@model Spice.Models.ViewModels.MenuItemViewModel
@using Spice.Extensions
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info">Menu Item Details</h2>
<br />


    <div class="border backgroundWhite row">
        <input type="hidden" asp-for="MenuItem.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-8">
            <fieldset disabled>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Name" class="col-form-label"> </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Description" class="col-form-label"> </label>
                    </div>
                    <div class="col-8">
                        @Html.TextAreaFor(m => m.MenuItem.Description)
                    </div>
                 
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Price" class="col-form-label"> </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.Price" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.CategoryId" class="col-form-label"> </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.Category.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.SubCategoryId" class="col-form-label"> </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.SubCategory.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Spicyness" class="col-form-label"> </label>
                    </div>
                    <div class="col-8">
                        <input value="@Enum.GetName(typeof(MenuItem.ESpicy), Int32.Parse(Model.MenuItem.Spicyness))"  class="form-control" />
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="col-3 offset-1">
            <img src="@Model.MenuItem.Image"  style="border-radius:5px; border:1px solid #bbb9b9;width:100%;" />
        </div>
        <div class="col-8">
            <div class="col-8 offset-4">
                <partial name="_EditOrBackToListButton" model="Model.MenuItem.Id" />
                @*<select readonly asp-for="MenuItem.Spicyness." asp-items="Html.GetEnumSelectList<MenuItem.ESpicy>()" class="form-control"></select>*@

            </div>
        </div>


    </div>

@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            readonly:1
        });

        $(document).ready(function () {
            $('.tox-statusbar').remove();

        });

    </script>



}



